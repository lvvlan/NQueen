fault {\n    components: { Block },\n    data() {\n        return {\n            val: 4,\n            n: 4,\n            all: [],\n            c: []\n        }\n    },\n    methods: {\n        handleClick() {\n            this.all = []\n            this.n = Number(this.val)\n            this.queen()\n            console.log(this.all)\n        },\n        queen(row = 0) {\n            if (row === this.n) {\n                this.all.push([...this.c])\n            } else {\n                for (let col = 0; col < this.n; col++) {\n                    this.c[row] = col\n                    if (this.check(row)) {\n                        this.queen(row + 1)\n                    }\n                }\n            }\n        },\n        check(row) {\n            for (let i = 0; i < row; i++){\n            // 纵向\n            if (this.c[row] === this.c[i]) return false\n            // 斜向相减\n            if (this.c[row] - row === this.c[i] - i) return false\n            // 斜向相加\n            if (this.c[row] + row === this.c[i] + i) return false\n        }\n        return true\n        }\n    }\n}\n</script>\n\n<style>\np {\n    margin: 0;\n    padding: 0;\n    height: 22px;\n}\n.item {\n    float: left;\n    margin-right: 10px;\n    margin-bottom: 10px;\n}\n</style>\n"]}]}